#!/bin/bash

SRC_VERSION="3.15"
SRC_FILENAME="module-init-tools-$SRC_VERSION.tgz"
SRC_FETCH_PATH="http://ftp.kernel.org/pub/linux/utils/kernel/module-init-tools/module-init-tools-$SRC_VERSION.tar.gz"
SRC_FETCH_METHOD="http"

do_compile() {
    ./configure --enable-zlib-dynamic
    ${PMAKE} depmod
    strip build/depmod
}

do_install() {
    rm -f "$DESTDIR/$PKG"
    cp build/depmod "$DESTDIR/$PKG"
}
