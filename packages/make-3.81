#!/bin/bash

SRC_VERSION="3.81"
SRC_FILENAME="make-$SRC_VERSION.tgz"
SRC_FETCH_PATH="http://ftp.gnu.org/gnu/make/make-$SRC_VERSION.tar.gz"
SRC_FETCH_METHOD="http"
PATCHES=( )

do_compile() {
    ./configure --prefix="/usr" --sysconfdir="/etc"
    ${PMAKE}
    strip make
}

do_install() {
    cp make $DESTDIR/$PKG
}


