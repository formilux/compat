#!/bin/bash

SRC_VERSION="3.82"
SRC_FETCH_PATH="http://ftp.gnu.org/gnu/make/make-$SRC_VERSION.tar.gz"
PATCHES=(
    make-3.82-bug30723.patch
    make-3.82-bug30748.patch
    make-3.82-bug31743.patch
)

do_compile() {
    ./configure --prefix="/usr" --sysconfdir="/etc"
    ${PMAKE} DIST_SUBDIRS= SUBDIRS=
    strip make
}

do_install() {
    rm -f "$DESTDIR/$PKG"
    cp make "$DESTDIR/$PKG"
}
