#!/bin/bash

[[ -n $SRC_VERSION ]] || die "need to be sourced by parent script"
SRC_FILENAME="squashfs-$SRC_VERSION.tgz"
SRC_FETCH_PATH="http://sourceforge.net/projects/squashfs/files/squashfs/squashfs$SRC_VERSION/squashfs$SRC_VERSION.tar.gz/download"
SRC_FETCH_METHOD="http"

do_compile() {
    cd squashfs-tools
    ${PMAKE} GZIP_SUPPORT=1 XZ_SUPPORT=1 EXTRA_CFLAGS=-I../../liblzma-5/src/liblzma/api EXTRA_LDFLAGS=-L../../liblzma-5/src/liblzma/.libs
    strip mksquashfs
    cd ..
}

do_install() {
    rm -f $DESTDIR/$PKG
    cp squashfs-tools/mksquashfs $DESTDIR/$PKG
}
